<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
   <t t-name="test_tasks.CustomDashboard"
      owl="1">
      <div class="vh-100 overflow-auto bg-muted">
         <div class="row m3">
            <div class="col-lg-7">
               <div class="row">
                  <div class="shadow-sm border m-2 p-4 bg-white">
                     <div class="d-flex align-items-center justify-content-between">
                        <h1 class="text-primary fw-bold">Custom Dashboard</h1>
                        <div>
                           <select class="form-select">
                              <option value="0">Select Period</option>
                              <option value="7">Last 7 days</option>
                              <option value="30">Last 30 days</option>
                              <option value="90">Last 90 days</option>
                              <option value="365">Last 365 days</option>
                           </select>
                        </div>
                     </div>
                  </div>
               </div>
               <div class="row">
                  <KpiCard name="'Quatations'"  value="10" percentage="6"/>
                  <KpiCard name="'Orders'"  value="20" percentage="8"/>
                  <KpiCard name="'Revenues'"   value="'30.50k'" percentage="-12"/>
                  <KpiCard name="'Average Order'"   value="'2.5k'" percentage="-16"/>
               </div>
            </div>
            <div class="col-lg-5">
            </div>
         </div>
      </div>
   </t>
</templates>