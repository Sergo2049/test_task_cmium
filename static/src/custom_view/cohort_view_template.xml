<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="cohort_view_template">
        <div class="o_custom_view">
            <t t-if="records && records.length">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
<!--                            <th>Other Field</th>-->
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="records" t-as="record">
                            <tr>
                                <td t-esc="record.name" />
<!--                                <td t-esc="record.other_field" />-->
                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>
            <t t-else="">
                <p>No records available</p>
            </t>
        </div>
    </t>
</templates>
