<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_views_form_inherited_test_tasks" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherited.test_tasks</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='partner_details']" position="inside">
                <field name="operator_id"/>
            </xpath>
            <xpath expr="//group[@name='partner_details']" position="inside">
                <field name="delivery_partner_id"/>
            </xpath>
            <xpath expr="//group[@name='partner_details']" position="inside">
                <field name="lead_source"/>
            </xpath>
            <xpath expr="//group[@name='partner_details']" position="inside">
                <field name="communication_channel"/>
            </xpath>
            <xpath expr="//group[@name='partner_details']" position="inside">
                <field name="paid_invoices_amount"/>
            </xpath>
            <xpath expr="//group[@name='partner_details']" position="inside">
                <field name="commitment_date"/>
            </xpath>
            <xpath expr="//group[@name='partner_details']" position="inside">
                <field name="paid_invoices_amount" widget="gauge"
                       options="{'max_field': 'amount_total', 'style': 'width:160px, height:160px'}"/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_views_tree_inherited_test_tasks" model="ir.ui.view">
        <field name="name">sale.order.view.tree.inherited.test_tasks</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="payment_progress" widget="progressbar"/>
            </xpath>
        </field>
    </record>

    <record id="delivery_statistic_views_calendar_test_tasks" model="ir.ui.view">
        <field name="name">sale.order.view.calendar.test_tasks</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <calendar string="Delivery Calendar" date_start="commitment_date" color="delivery_partner_id">
                <field name="name"/>
                <field name="delivery_partner_id" filters="1"/>
            </calendar>
        </field>
    </record>

    <record id="delivery_statistic_views_pivot_test_tasks" model="ir.ui.view">
        <field name="name">sale.order.view.pivot.test_tasks</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <pivot string="Delivery Pivot">
<!--                measures-->
                <field name="id" string="Order count"/>
                <field name="paid_invoices_amount" type="measure"/>
                <field name="payment_progress" type="measure"/>
                <field name="amount_total" string="Orders amount" type="measure"/>
<!--                rows-->
                <field name="delivery_partner_id" type="row"/>
<!--                col-->
<!--                <field name="delivery_partner_id.company_id"  type="col"/>-->
                <field name="courier_company_id" type="col"/>
                <field name="commitment_date" string="Delivery date" interval="month" type="col"/>
                <field name="commitment_date" string="Delivery date" interval="week" type="col"/>
                <field name="commitment_date" string="Delivery date" interval="day" type="col"/>
            </pivot>
        </field>
    </record>

    <record id="delivery_statistic_views_graph_test_tasks" model="ir.ui.view">
        <field name="name">sale.order.view.graph.test_tasks</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <graph string="Delivery Graph">
<!--                <field name="id"/>-->
                <field name="delivery_partner_id"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>
</odoo>