<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="shift_schedule_view_form"
        model="ir.ui.view">
        <field name="name">Shift Schedule</field>
        <field name="model">shift.schedule</field>
        <field name="arch"
            type="xml">
            <field name="shift_date"/>
            <field name="courier_id"/>
            <field name="shift"/>
        </field>
    </record>

    <record id="test_tasks.action_delivery_schedule_table"
        model="ir.actions.client">
        <field name="name">Delivery Schedule table"</field>
        <field name="tag">test_tasks.DeliveryScheduleServices</field>
    </record>

    <record id="test_tasks.action_delivery_schedule"
        model="ir.actions.act_window">
        <field name="name">Delivery schedeule</field>
        <field name="res_model">shift.schedule</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="test_tasks.menu_delivery_schedule_table"
        name="Delivery Schedule Table"
        action="action_delivery_schedule_table"
        parent="delivery_statistics_menu_root"
        sequence="100"/>

    <menuitem id="test_tasks.menu_delivery_schedule"
        name="Delivery Schedule"
        action="action_delivery_schedule"
        parent="delivery_statistics_menu_root"
        sequence="110"/>
</odoo>