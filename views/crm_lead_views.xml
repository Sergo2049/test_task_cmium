<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_create_sale_order" model="ir.actions.act_window">
        <field name="name">Create Sale Order</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_opportunity_id': active_id}</field>
    </record>

    <record id="crm_lead_views_form_inherited_test_tasks" model="ir.ui.view">
        <field name="name">crm.lead.view.form.inherited.test_tasks</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="%(action_create_sale_order)d" type="action"
                        string="Create Sale Order" class="btn-primary"/>
            </header>
            <div class="oe_button_box" name="button_box" position="inside">
                <button name="action_show_relates_orders" type="object"
                        class="oe_stat_button" icon="fa-usd" title="sale orders">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="orders_sum" widget="monetary"/>
                        </span>
                        <span class="o_stat_text">Orders</span>
                    </div>
                </button>
            </div>
            <xpath expr="//group[@name='opportunity_partner']" position="inside">
                <field name="operator_id"/>
            </xpath>
            <xpath expr="//group[@name='opportunity_partner']" position="inside">
                <field name="delivery_partner_id"/>
            </xpath>
            <xpath expr="//group[@name='opportunity_partner']" position="inside">
                <field name="lead_source"/>
            </xpath>
            <xpath expr="//group[@name='opportunity_partner']" position="inside">
                <field name="communication_channel"/>
            </xpath>
            <xpath expr="//group[@name='opportunity_partner']" position="inside">
                <field name="paid_sum"/>
            </xpath>
            <xpath expr="//group[@name='opportunity_partner']" position="inside">
                <field name="orders_sum"/>
            </xpath>
            <xpath expr="//group[@name='opportunity_partner']" position="inside">
                <field name="paid_sum" string="Payment progress" widget="gauge"
                       options="{'max_field': 'orders_sum', 'style': 'width:160px, height:160px'}"
                       attrs="{'invisible': [('orders_sum', '=', 0)]}"/>
            </xpath>
        </field>
    </record>

    <record id="crm_lead_views_tree_inherited_test_tasks" model="ir.ui.view">
        <field name="name">crm.lead.view.tree.inherited.test_tasks</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml">
            <field name="stage_id" position="after">
                <field name="payment_progress" widget="progressbar"/>
            </field>
        </field>
    </record>

    <record id="crm_lead_views_kanban_inherited_test_tasks" model="ir.ui.view">
        <field name="name">crm.lead.view.kanban.inherited.test_tasks</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <field name="activity_state" position="after">
                <field name="orders_sum"/>
            </field>
            <xpath expr="//div[@class='o_kanban_record_bottom']" position="before">
                <div class="o_kanban_record_bottom">
                    <div class="oe_kanban_bottom_left">
                        <span>Paid</span>
                    </div>
                    <div class="oe_kanban_bottom_right">
                        <field name="payment_progress" widget="percentpie"
                               attrs="{'invisible': [('orders_sum', '=', 0)]}"/>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@class='o_kanban_record_bottom']" position="before">
                <div>
                    <span>Orders sum:</span>
                    <field name="orders_sum"/>
                </div>
                <div>
                    <button name="action_assign_lead_current_user" type="object"
                            class="btn btn-dark" string="Grab"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>